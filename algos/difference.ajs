from complementation import complement
from product import product
from completion import complete

//Difference between 2 automata: A1-A2
//The language recognized is L(A1) \ (L(A1) âˆ© L(A2))
export function difference(A1, A2)
    //Complete the second automaton, need it to do properly the product
    A2 := complete(A2,A1.getAlphabet() U A2.getAlphabet())

    let notA2 := complement(A2)
    let diffA := product(A1,notA2)
    return diffA
end function

run(get_automata, 2, difference)
