#!/usr/bin/env sh

if [ "$JS" = "" ]; then
    if [ "`which nodejs`" = "" ]; then
        if [ "`which node`" = "" ]; then
            if [ "`which rhino`" = "" ]; then
                echo "Could not find any supported javascript engine (nodejs or rhino). Please install one or set the JS environment variable to such an engine."
                exit
            else
                JS=rhino
            fi
        else
            JS=node
        fi
    else
        JS=nodejs
    fi
fi

if [ -f `dirname $0`/ajs.js ]; then
    $JS `dirname $0`/ajs.js $@
else
    $JS `dirname $0`/../share/aude/ajs.js $@
fi
