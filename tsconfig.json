{
  "compilerOptions": {
    "removeComments": true,
    "outDir": "build/",
    "rootDir": "ts/",
    "target": "es2016",
    "typeRoots": ["./js/typings"],
    "pretty": true,
    "listEmittedFiles": true,
    "incremental": true,
    "tsBuildInfoFile": "build/buildInfoFile.json",
    "newLine": "lf",
    "alwaysStrict": true,
    "noEmitOnError": true
  },

  "include": [
    "./ts/**.ts",
    "./ts/gui/**.ts",
    "./ts/server-api/**.ts",
    "./js/**.ts",
    "./typings/**.d.ts",
    "./js/gui/**.ts"
  ],

  // Don't build Audescript module with tsconfig yet, as it causes errors
  "exclude": [
    "./js/audescript/**.ts"
  ]
}